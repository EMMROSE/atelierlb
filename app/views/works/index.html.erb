<div>
  <div class="cards" style="margin-top: 80px;">
    <% if @works %>
      <% @works.each do |work| %>
        <%= link_to work_path(work) do %>
          <div class="card-category">
            <%= cl_image_tag work.cover.key, class: "cover"%>
            <div class="card-category">
              <h3><%= work.title %></h3>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
